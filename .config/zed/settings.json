{
    "vim_mode": true,
    "ui_font_size": 16,
    "buffer_font_size": 14.0,
    "tab_size": 4,
    "buffer_font_family": "Berkeley Mono",
    "theme": "Catppuccin Mocha",
    "icon_theme": "Material Icon Theme",
    "telemetry": {
        "metrics": false,
        "diagnostics": false
    },
    "git": {
        "inline_blame": {
            "enabled": false
        }
    },
    "terminal": {
        "font_family": "IosevkaTerm Nerd Font"
    },
    "language_overrides": {
        "Python": {
            "format_on_save": {
                "external": {
                    "command": "ruff",
                    "arguments": [
                        "check",
                        "--exit-zero",
                        "--fix",
                        "--stdin-filename",
                        "{buffer_path}",
                        "-"
                    ]
                }
            }
        }
    }
}
